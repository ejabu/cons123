<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.actions.act_window" id="boq_info_action">
            <field name="name">Boq Info</field>
            <field name="res_model">boq.info</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>

        </record>

        <menuitem id="sub_boq_info" name="Bill of Quantity" parent="project.menu_project_management" action="boq_info_action" sequence="10"/>

        <!-- Tree view for the menuitem -->
        <record id="boq_info_tree" model="ir.ui.view">
            <field name="name">boq.info.tree</field>
            <field name="model">boq.info</field>
            <field name="arch" type="xml">
                <tree >
                    <field name="project"/>
                    <field name="revision"/>
                    <field name="material_cost" readonly='1'/>
                    <field name="subcontract_cost" readonly='1'/>
                    <field name="labor_cost" readonly='1'/>
                    <field name="equipment_cost" readonly='1'/>
                    <field name="wk_package_cost" readonly='1'/>
                    <field name="markup_cost"/>
                    <field name="estimated_cost" readonly='1'/>
                </tree>
            </field>
        </record>
        <!-- Form view for the menuitem -->
        <record id="boq_info_form" model="ir.ui.view">
            <field name="name">boq.info.form</field>
            <field name="model">boq.info</field>
            <field name="arch" type="xml">
                <form string="Static resource demo">
                    <sheet>
                        <group colspan="4" col="4">

                                <field name="project"/>
                                <field name="material_cost"/>
                                <field name="subcontract_cost"/>
                                <field name="labor_cost"/>
                                <field name="equipment_cost"/>
                                <field name="wk_package_cost"/>
                                <field name="estimated_cost"/>
                                <field name="markup_cost"/>
                                <field name="revision"/>

                        </group>

                        <field name="line_ids">
                            <tree editable="bottom">
                                <!-- <field name="ref" on_change="material_id_change(ref)"/> -->
                                <field name="ref"/>
		            			<field name="type"/>
			            		<field name="desc"/>
			            		<field name="unit"/>
			            		<field name="quantity"/>
			            		<field name="unit_rate"/>
			            		<!-- <field name="quantity" on_change="onchange_total_amount(quantity,unit_rate)"/> -->
			            		<!-- <field name="unit_rate" on_change="onchange_total_amount(quantity,unit_rate)"/> -->
			            		<field name="total"/>
			            		<field name="is_product" invisible="0"/>
			            		<field name="is_employee" invisible="0"/>
			            		<field name="is_asset" invisible="0"/>
			            		<field name="is_subcontract" invisible="0"/>
			            		<field name="is_work_package" invisible="0"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>
